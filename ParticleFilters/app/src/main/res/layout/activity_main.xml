<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorDark">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp"
        tools:context="com.example.example6.MainActivity" >

        <ImageView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button_up"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_above="@id/button_down"
            android:text="U" />

        <Button
            android:id="@+id/button_down"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_above="@id/button_left"
            android:text="D" />

        <Button
            android:id="@+id/button_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_above="@id/button_right"
            android:text="L" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="0dp"
            android:text="R" />

        <TextView
            android:id="@+id/textview_direction"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_above="@id/textview_steps"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:textColor="@color/colorLight"
            android:textAlignment="center"
            android:text="" />

        <TextView
            android:id="@+id/textview_steps"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_above="@id/textview_azimuth"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:textColor="@color/colorLight"
            android:textAlignment="center"
            android:text="" />

        <TextView
            android:id="@+id/textview_azimuth"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_above="@id/textview_particle_count"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:textColor="@color/colorLight"
            android:textAlignment="center"
            android:text="" />

        <TextView
            android:id="@+id/textview_particle_count"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_above="@id/button_start"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:textColor="@color/colorLight"
            android:textAlignment="center"
            android:text="" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp"
            android:layout_above="@id/button_init"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:text="Start" />

        <Button
            android:id="@+id/button_init"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp"
            android:layout_above="@id/button_reset"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:text="Init" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="10sp"
            android:text="Reset" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>